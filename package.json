{
  "name": "vite-react-ssr-sample",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev:client": "cross-env NODE_ENV=development vite",
    "swc:watch": "swc server-src/index.js -o dist/server/index.js --watch",
    "swc:build": "swc server-src/index.js -o dist/server/index.js",
    "dev:server": "nodemon --watch dist/server --exec \"node dist/server/index.js\" --delay 200",
    "dev": "concurrently \"npm:dev:client\" \"npm:swc:watch\" \"npm:dev:server\"",
    "build:client": "vite build",
    "build:ssr": "vite build --ssr src/entry-server.jsx --outDir dist/server-ssr",
    "build:server": "npm run swc:build",
    "build": "npm run build:client && npm run build:ssr && npm run build:server",
    "start": "cross-env NODE_ENV=production node server.js"
  },
  "dependencies": {
    "express": "^4.21.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.30.1"
  },
  "devDependencies": {
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.13.5",
    "@vitejs/plugin-react-swc": "^4.1.0",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.10",
    "vite": "^5.0.0"
  }
}
